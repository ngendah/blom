{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/builds/${presetName}",
      "cacheVariables": {
        "PROJECT_BUILD_DIR": "${sourceDir}/builds/${presetName}"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux.x64",
      "displayName": "Linux x64 debug",
      "inherits": "linux",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux.x64-release",
      "displayName": "Linux x64 release",
      "inherits": "linux.x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "base",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "android",
      "displayName": "Android",
      "inherits": "base",
      "hidden": true,
      "cacheVariables": {
        "ANDROID_PLATFORM": "android-29",
        "CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_TOOLCHAIN_FILE": "$env{CMAKE_ANDROID_NDK}/build/cmake/android.toolchain.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "android.x64",
      "displayName": "Android x86_64 (x86_64)",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "x86_64",
        "CMAKE_ANDROID_ARCH_ABI": "x86_64",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "android.v7a",
      "displayName": "Android ARM 32 eabi (armeabi-v7a)",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "armeabi-v7a",
        "CMAKE_ANDROID_ARCH_ABI": "armeabi-v7a",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "android.v8a",
      "displayName": "Android ARM 64 eabi (arm64-v8a)",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a",
        "CMAKE_ANDROID_ARCH_ABI": "arm64-v8a",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux.x64",
      "displayName": "Linux",
      "configurePreset": "linux.x64"
    },
    {
      "name": "android.x64",
      "displayName": "Android x86_64",
      "description": "X86 64 builds for Android",
      "configurePreset": "android.x64"
    },
    {
      "name": "android.v7a",
      "displayName": "armeabi-v7a",
      "description": "ARM 32 builds for Android",
      "configurePreset": "android.v7a"
    },
    {
      "name": "android.v8a",
      "displayName": "arm64-v8a",
      "description": "ARM 64 builds for Android",
      "configurePreset": "android.v8a"
    }
  ]
}
